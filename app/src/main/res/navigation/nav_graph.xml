<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gameConfigurationFragment">

    <fragment
        android:id="@+id/gameConfigurationFragment"
        android:name="com.example.tbcworks.Screens.gameConfiguration.GameConfigurationFragment"
        android:label="fragment_game_configuration"
        tools:layout="@layout/fragment_game_configuration" >
        <action
            android:id="@+id/action_gameConfigurationFragment_to_gameDisplayFragment"
            app:destination="@id/gameDisplayFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDisplayFragment"
        android:name="com.example.tbcworks.Screens.gameDisplay.GameDisplayFragment"
        android:label="fragment_game_display"
        tools:layout="@layout/fragment_game_display">
        <argument
            android:name="row"
            app:argType="integer"
            android:defaultValue="3"/>
        <argument
            android:name="col"
            app:argType="integer"
            android:defaultValue="3"/>
    </fragment>
</navigation>