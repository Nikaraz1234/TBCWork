<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screen.event_detail.EventDetailsFragment"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_btn_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_margin="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:text="@string/event_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textFontWeight="400"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_btn"
            android:id="@+id/ivBanner"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leadership Workshop: Effective Communication"
            android:textSize="24sp"
            android:id="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@id/ivBanner"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
            android:layout_marginTop="15dp"
            android:id="@+id/tvEventDate"
            android:drawableStart="@drawable/ic_calendar"
            android:layout_marginStart="20dp"
            android:text="December 20, 2025"
            android:drawablePadding="15dp"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEventDate"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_clock"
            android:layout_marginStart="20dp"
            android:id="@+id/tvEventTime"
            android:text="12:00 PM"
            android:drawablePadding="15dp"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEventTime"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_location"
            android:layout_marginStart="20dp"
            android:id="@+id/tvLocation"
            android:text="Event Hall 1"
            android:drawablePadding="15dp"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            android:layout_marginTop="12dp"
            android:id="@+id/tvCapacity"
            android:drawableStart="@drawable/ic_group"
            android:layout_marginStart="20dp"
            android:text="50 Seats"
            android:drawablePadding="15dp"
            android:textSize="14sp"/>

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_separator"
            app:layout_constraintTop_toBottomOf="@id/tvCapacity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn"
            app:layout_constraintTop_toBottomOf="@id/separator1"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/white"
            android:text="@string/register_now"
            android:textAllCaps="false"
            android:id="@+id/btnRegister"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            app:layout_constraintStart_toStartOf="@id/btnRegister"
            app:layout_constraintEnd_toEndOf="@id/btnRegister"
            android:paddingHorizontal="10dp"
            android:id="@+id/tvRegisterClose"
            android:text="Registration closes on Dec 19, 2025 at 5:00 PM."
            android:layout_marginTop="8dp"/>

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_separator"
            app:layout_constraintTop_toBottomOf="@id/tvRegisterClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAboutTitle"
            android:layout_margin="15dp"
            android:text="@string/about_this_event"
            app:layout_constraintTop_toBottomOf="@id/separator2"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/tvAboutDescription"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/gray_dark_text"
            android:lineHeight="23dp"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"/>

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_separator"
            app:layout_constraintTop_toBottomOf="@id/tvAboutDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator3"
            android:layout_margin="16dp"
            android:text="@string/agenda"
            android:textSize="18sp"
            android:id="@+id/tvAgendaTitle"
            android:lineHeight="28dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAgendaTitle"
            android:id="@+id/rvAgenda"
            android:nestedScrollingEnabled="false"
            android:layout_margin="15dp"/>

        <View
            android:id="@+id/separator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_separator"
            app:layout_constraintTop_toBottomOf="@id/rvAgenda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSpeakersTitle"
            android:text="@string/featured_speakers"
            app:layout_constraintTop_toBottomOf="@id/separator4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"
            android:textSize="18sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpeakersTitle"
            android:id="@+id/rvSpeakers"
            android:nestedScrollingEnabled="false"
            android:layout_margin="15dp"/>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:indeterminate="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
