<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddPotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Pot"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pot Title"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddPotTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPotTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvPotName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTargetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Amount"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/etPotTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etTargetAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et"
        android:inputType="numberDecimal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvTargetAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddPot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="Add Pot"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/etTargetAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
