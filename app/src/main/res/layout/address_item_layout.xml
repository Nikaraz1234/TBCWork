<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="30dp"
    android:elevation="4dp"
    android:background="@drawable/cv_borders">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rbAddress"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:text=""
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/address_building"
            app:layout_constraintStart_toEndOf="@id/rbAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSendTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send To"
            app:layout_constraintStart_toEndOf="@id/ivAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="15sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Office"
            android:textColor="@color/item_name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivAddress"
            app:layout_constraintTop_toBottomOf="@id/tvSendTo"
            android:layout_marginStart="10dp"
            android:textSize="15sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SBI Building, street 3, Software Park"
            android:textColor="@color/item_name"
            app:layout_constraintStart_toEndOf="@id/rbAddress"
            app:layout_constraintTop_toBottomOf="@id/rbAddress"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textColor="@color/edit_button"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />










    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>