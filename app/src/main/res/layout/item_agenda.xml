<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/numberCircle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_bg"
        android:text="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/separator1"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:background="@color/gray_separator"
        app:layout_constraintTop_toBottomOf="@id/numberCircle"
        app:layout_constraintStart_toStartOf="@id/numberCircle"
        app:layout_constraintEnd_toEndOf="@id/numberCircle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"/>

    <!-- Time -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:00 PM -"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/numberCircle"
        app:layout_constraintTop_toTopOf="@id/numberCircle"
        android:layout_marginStart="8dp"/>

    <!-- Title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome and Introduction"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/timeText"
        app:layout_constraintTop_toTopOf="@id/timeText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- Description -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Overview of the workshop goals and key topics."
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/timeText"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
